<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.uwm.wmii.student.michal.itmproj.Fragments.TestsFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Testy"
        android:textAlignment="center"
        android:textSize="24sp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/testyBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/testyBtn2"
            android:layout_alignLeft="@+id/testyBtn2"
            android:layout_alignStart="@+id/testyBtn2"
            android:hapticFeedbackEnabled="false"
            android:text="@string/testy_button"
            android:textAlignment="center"
            android:visibility="visible" />

        <Button
            android:id="@+id/testyBtn2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:hapticFeedbackEnabled="false"
            android:text="Alko Ninja"
            android:textAlignment="center"
            android:visibility="visible" />
    </RelativeLayout>
</FrameLayout>
