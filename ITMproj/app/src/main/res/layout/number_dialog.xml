<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <NumberPicker
        android:id="@+id/alkoPicker"
        android:layout_width="177dp"
        android:layout_height="180dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/alkoPicker"
        android:layout_toRightOf="@+id/alkoPicker"
        android:text="ok"
        app:layout_constraintStart_toEndOf="@+id/anuluj"
        app:layout_constraintTop_toBottomOf="@+id/alkoPicker" />

    <Button
        android:id="@+id/anuluj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/alkoPicker"
        android:text="anuluj"
        app:layout_constraintTop_toBottomOf="@+id/alkoPicker" />
</android.support.constraint.ConstraintLayout>